<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    >

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_list_item_name"
        android:text="Name"
        />

    <TextView
        android:id="@+id/item_foreground_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size_list_item_other"
        android:textColor="@color/grey"
        />

    <TextView
        android:id="@+id/item_count_open"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name"
        android:layout_toEndOf="@+id/item_foreground_time"
        android:textSize="@dimen/text_size_list_item_other"
        android:textColor="@color/grey"
        />

    <TextView
        android:id="@+id/item_percentage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name"
        android:layout_toEndOf="@+id/item_count_open"
        android:textSize="@dimen/text_size_list_item_other"
        android:textColor="@color/grey"
        />

</RelativeLayout>